<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:backgroundTint="@color/colorPrimaryLight" >

    <TextView
        android:id="@+id/finish_recipe_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="36sp"
        android:background="@drawable/rounded_corner_view"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="@string/recipe_finished_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/finish_image"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:src="@drawable/baseline_local_dining_24"
        app:layout_constraintTop_toBottomOf="@id/finish_recipe_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/start_over_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_over_button_text"
        app:layout_constraintTop_toBottomOf="@id/finish_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>